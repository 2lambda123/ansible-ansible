# rvm
#		state= present|absent (default: present)
#		install_type= single|multi (default: single)

import traceback
import os

def run_command(cmd):
	p = subprocess.Popen(cmd, shell=False, stdout=subprocess.PIPE, stderr=subprocess.PIPE)
	(out, err) = p.communicate()
	rc = p.returncode
	return (rc, out, err)


def get_rvm_path():
	if os.environ.has_key('rvm_path'):
		return os.environ["rvm_path"]

	rvm = "~/.rvm"

	if os.path.exists(rvm):
		return os.path.abspath(rvm)

	rvm = "/usr/local/rvm"

	if os.path.exists(rvm):
		return rvm


def get_rvm_bin():
	if os.environ.has_key('rvm_bin_path'):
		return os.environ["rvm_bin_path"]


def install_multi():
	cmd1 = ['/usr/bin/curl', '--silent', '-L', 'https://get.rvm.io']
	cmd2 = ['/usr/bin/sudo', '/bin/bash', '-s', 'stable']
	p1 = subprocess.Popen(cmd1, stdin=subprocess.PIPE, stdout=subprocess.PIPE, stderr=subprocess.PIPE)
	p2 = subprocess.Popen(cmd2, stdin=p1.stdout, stdout=subprocess.PIPE)

	p1.stdout.close()
	(out, err) = p2.communicate()
	rc = p2.returncode

	return (rc, out, err)


def install_single():
	cmd1 = ['/usr/bin/curl', '--silent', '-L', 'https://get.rvm.io']
	cmd2 = ['/bin/bash', '-s', 'stable']
	p1 = subprocess.Popen(cmd1, stdin=subprocess.PIPE, stdout=subprocess.PIPE, stderr=subprocess.PIPE)
	p2 = subprocess.Popen(cmd2, stdin=p1.stdout, stdout=subprocess.PIPE)

	p1.stdout.close()
	(out, err) = p2.communicate()
	rc = p2.returncode

	return (rc, out, err)


def remove():
	cmd = ['/usr/bin/sudo', 'rm', '-rf', '$HOME/.rvm $HOME/.rvmrc', '/etc/rvmrc',
			'/etc/profile.d/rvm.sh', '/usr/local/rvm', '/usr/local/bin/rvm']
	(rc, out, err) = run_command(cmd)
	if rc != 0:
		return (rc, out, err)

	remove_rvm_group()

	return (rc, out, err)


def remove_rvm_group():
	cmd = ['/usr/bin/id', 'rvm']
	(rc, out, err) = run_command(cmd)

	if rc == 0:
		cmd = ['/usr/bin/sudo', '/usr/sbin/groupdel', 'rvm']
		(rc, out, err) = run_command(cmd)


def install(install_type):
	if install_type == 'multi':
		(rc, out, err) = install_multi()
	elif install_type == 'single':
		(rc, out, err) = install_single()

	return (rc, out, err)


def main():
	module = AnsibleModule(
		argument_spec = dict(
			state = dict(choices=['present', 'absent']),
			install_type= dict(choices=['single', 'multi'])
		)
    )

	state = module.params['state']
	install_type = module.params['install_type']
	
	result = {}
	result['state'] = state
	result['install_type'] = install_type

	rc = None
	out = ''
	err = ''

	rvm_path = get_rvm_path()

	if rvm_path:
		result['changed'] = False

	#rvm_bin = get_rvm_bin(rvm_path)

	if state == 'absent':
		(rc, out, err) = remove()
		if rc > 0:
			module.fail_json(msg=err)
	elif state == 'present':
		if not rvm_path:
			(rc, out, err) = install(install_type)

			if err:
				module.fail_json(rc=rc, msg=err, out=out)
			else:
				module.exit_json(**result)

	if rc is None:
		result['changed'] = False
	else:
		result['changed'] = True

	if out:
		result['stdout'] = out

	if err:
		result['stderr'] = err

	module.exit_json(**result)


# this is magic, see lib/ansible/module_common.py
#<<INCLUDE_ANSIBLE_MODULE_COMMON>>
main()
