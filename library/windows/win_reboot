# this is a windows documentation stub, actual code lives in the .ps1
# file of the same name

DOCUMENTATION = '''
---
module: win_reboot
version_added: "1.8"
short_description: reboots a Windows host
description:
     - Reboots a Windows host
options:
  state:
    description:
      - When C(query), only check if the host needs to be restarted.  When
        C(reboot), reboot the host.  When C(shutdown), shutdown the host.
    required: false
    choices: [ "query", "reboot", "shutdown" ]
    default: "reboot"
  force:
    description:
      - When C(yes), force a reboot or shutdown regardless of whether the host
        needs a restart.
    required: false
    choices: [ "yes", "no" ]
    default: "no"
author: Chris Church
'''

EXAMPLES = '''
# Reboot a Windows host if needed and wait for it to become available again.

- win_reboot: state=query
  register: win_reboot_needed

- debug: var=win_reboot_needed

- win_reboot: state=reboot
  register: win_reboot_result

- local_action: wait_for host={{ ansible_ssh_host|default(inventory_hostname) }} port={{ ansible_ssh_port|default(5986) }} delay=10 timeout=300
  when: win_reboot_result|changed

- action: win_ping

'''
