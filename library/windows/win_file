# this is a windows documentation stub.  actual code lives in the .ps1
# file of the same name

DOCUMENTATION = '''
---
module: win_file
version_added: "1.7"
short_description: Manages creation/deletion of files/folders in windows 
description:
     - Manages local filesystem creating/deleting files and folders
options:
  name:
    description:
      - Absolute or Relative Path [C:\example or C:\example\hello.txt or ..\example\hello.txt or ..\example]
    required: true
    default: null
    aliases: []
  state:
    description:
      - Whether to create or delete a file or a folder
    required: false
    choice:
	-file
	-directory
	-absent
    default: file
    aliases: []
  force:
    description:
      - force creation of a specified item state (delete and re-create any folder / file with same path) 
author: Mirco Patroncini (P3dr0)
'''

EXAMPLES = '''
# Ad-hoc example
$ ansible -i hosts -m win_file -a "name=c:\example\hello.txt"
$ ansible -i hosts -m win_file -a "name=c:\example state=directory force=true"
$ ansible -i hosts -m win_file -a "name=c:\example state=absent
$ ansible -i hosts -m win_file -a "name=c:\example\hello.txt state=absent

# Playbook example
---
- name: Create empty file and folder tree 
  hosts: all
  gather_facts: false
  tasks:
    - name: Create Empty File
      win_file:
        name:"c:\example\hello.txt"
        state:"file"
	force:"true"
'''
