{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AlowSTSAnsibleTests",
            "Action": [
                "iam:Get*",
                "iam:List*",
                "iam:CreateRole",
                "iam:PassRole",
                "sts:AssumeRole",
                "iam:AttachRolePolicy",
                "iam:CreateInstanceProfile",
                "iam:AddRoleToInstanceProfile"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:iam::{{aws_account}}:role/ansible-test-sts-role",
                "arn:aws:iam::{{aws_account}}:instance-profile/ansible-test-sts-role"
            ]
        }
    ]
}